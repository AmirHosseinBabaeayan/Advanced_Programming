<UserControl x:Class="Tura.Controls.TuringTapeCellControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:res="clr-namespace:Tura.Properties"
             xmlns:local="clr-namespace:Tura.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-2,0,0,0">
    <Grid Background="{Binding Source={x:Static res:Settings.Default}, Path=BackColor}">
        <Rectangle Stroke="{Binding Source={x:Static res:Settings.Default}, Path=ForeColor}" StrokeThickness="2"/>
        <TextBlock Name="ContentTextBlock" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{Binding Source={x:Static res:Settings.Default}, Path=ForeColor}" Background="{Binding Source={x:Static res:Settings.Default}, Path=BackColor}"/>
    </Grid>
</UserControl>
