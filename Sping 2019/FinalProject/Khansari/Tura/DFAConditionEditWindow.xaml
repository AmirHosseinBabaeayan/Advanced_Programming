<Window x:Class="Tura.DFAConditionEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:res="clr-namespace:Tura.Properties"
        xmlns:local="clr-namespace:Tura"
        mc:Ignorable="d"
        Title="DFAConditionEditWindow" Height="450" Width="300" ResizeMode="NoResize">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Auto" Background="{Binding Source={x:Static res:Settings.Default}, Path=BackColor}">
        <StackPanel Name="ConditionsPanel" VerticalAlignment="Top" Margin="0,0,0,20">

        </StackPanel>
        </ScrollViewer>
        <Button Height="20" Name="AddItemButtonClick" Content="+" VerticalAlignment="Bottom" Click="AddItemButtonClick_Click" Background="{Binding Source={x:Static res:Settings.Default}, Path=Accent}" Foreground="{Binding Source={x:Static res:Settings.Default}, Path=ForeColor}"/>
    </Grid>
</Window>
